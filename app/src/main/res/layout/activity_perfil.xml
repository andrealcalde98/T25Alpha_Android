<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".PerfilActivity">

    <EditText
        android:id="@+id/etEdad2"
        android:hint="@string/edad"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="360dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNombreApellidos2"
        android:hint="@string/nya"
        android:layout_width="246dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCorreo2"
        android:hint="@string/correo"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="201dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEdita"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/redondeado"
        android:text="@string/edita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etSexo2"
        android:hint="@string/sexo"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="282dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etContrasena2"
        android:hint="@string/contra"
        android:layout_width="246dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="531dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAltura2"
        android:hint="@string/altura"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="446dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="251dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="Perfil del Usuario"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>